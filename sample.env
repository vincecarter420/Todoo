# === DATABASE CONFIGURATION ===
# The full database URL including username, password, host, and database name.
# Replace with you own link
DATABASE_URL=postgresql://fanlore_owner:<password>@<host>.aws.neon.tech/fanlore?sslmode=require

# === DJANGO SETTINGS ===
# Secret key used for cryptographic signing. Keep this safe!
SECRET_KEY=your_secret_key_here

# Toggle debug mode â€” should be False in production!
DEBUG=True

# A list of hosts/domains your Django app can serve.
ALLOWED_HOSTS=*

# === CLOUDINARY SETTINGS ===
# Cloudinary cloud name (used for storing media files)
CLOUDINARY_CLOUD_NAME=fanlore

# API key for accessing Cloudinary
CLOUDINARY_API_KEY=your_cloudinary_api_key_here

# API secret for secure access to Cloudinary
CLOUDINARY_API_SECRET=your_cloudinary_api_secret_here

# === TIMEZONE ===
# Set the timezone to your local timezone (e.g., Asia/Bangkok, UTC, etc.)
TIME_ZONE=Asia/Bangkok